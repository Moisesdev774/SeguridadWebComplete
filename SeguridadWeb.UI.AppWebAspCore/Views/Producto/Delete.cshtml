@model SeguridadWeb.EntidadesDeNegocio.Producto

@{
    ViewData["Title"] = "Delete";
}

@{
    ViewData["Title"] = "Delete";
}
<h1>Eliminar Producto</h1>

<h3>¿ Esta seguro que desea eliminar ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdCategoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estatus)
        </dt>
        @if (Model.Estatus == 1)
        {
            <dd class="col-sm-10">
                ACTIVO
            </dd>
        }
        else if (Model.Estatus == 2)
        {
            <dd class="col-sm-10">
                INACTIVO
            </dd>
        }
        else
        {
            <dd class="col-sm-10"> </dd>
        }

        
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-dark">Cancelar</a>
    </form>
    <span class="text-danger">@ViewBag.Error</span>
</div>
